{
    "env": {
        "browser": true,
        "es2021": true,
        "jest/globals": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "jest"
    ],
    "rules": {
        "react/jsx-filename-extension": ["error", { "extensions": [".js", ".jsx"] }],
        "no-console": "warn",
        "no-debugger": "warn",
        "quotes": ["error", "single"],
        "no-trailing-spaces": ["error"],
        "indent": ["error", "tab"],
        "no-multiple-empty-lines": ["error", { "max": 1 }]
    },
    "settings": {
        "react": {
          "version": "detect"
        }
    }
}
